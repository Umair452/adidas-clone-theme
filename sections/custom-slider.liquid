<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script>
  function initFeaturedCollectionSlider(wrapper) {
    if (!wrapper) return;
    let slider = wrapper.querySelector('.featured-collection-slider-{{ section.id }}');
    if (!slider) return;
    let perMobile = slider.getAttribute('data-preview-mobile');
    let perMobileBig = slider.getAttribute('data-preview-mobile-big');
    let perDesktop = slider.getAttribute('data-preview-desktop');
    new Swiper(slider, {
      speed: 300,
      spaceBetween: 20,
      slidesPerView: 2,
      navigation: {
        nextEl: wrapper.querySelector('.featured-collection-btn-next-{{ section.id }}'),
        prevEl: wrapper.querySelector('.featured-collection-btn-prev-{{ section.id }}')
      },
      pagination: {
        el: wrapper.querySelector('.featured-collection-pagination-{{ section.id }}'),
        type: 'progressbar'
      },
      breakpoints: {
        320: {
          slidesPerView: perMobile,
        },
        768: {
          slidesPerView: perMobileBig,
        },
        1024: {
          slidesPerView: perDesktop,
        }
      }
    });
  }

  function initAllFeaturedCollectionSliders() {
    document.querySelectorAll('.collection-slider-wrapper-{{ section.id }}').forEach(wrapper => {
      initFeaturedCollectionSlider(wrapper);
    });
  }

  document.addEventListener('DOMContentLoaded', function() {
    initAllFeaturedCollectionSliders();

    // Tab switching logic
    document.querySelectorAll('.collection-tab-btn-{{ section.id }}').forEach(btn => {
      btn.addEventListener('click', function() {
        document.querySelectorAll('.collection-tab-btn-{{ section.id }}').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        let selected = this.getAttribute('data-collection');
        document.querySelectorAll('.collection-slider-wrapper-{{ section.id }}').forEach(wrapper => {
          if(wrapper.getAttribute('data-collection') === selected) {
            wrapper.classList.remove('hidden');
            // Re-init Swiper for the newly shown slider
            setTimeout(() => {
              initFeaturedCollectionSlider(wrapper);
            }, 100);
          } else {
            wrapper.classList.add('hidden');
          }
        });
      });
    });
  });

  // Shopify design mode support
  if (Shopify.designMode) {
    document.addEventListener('shopify:section:load', initAllFeaturedCollectionSliders);
    document.addEventListener('shopify:section:select', initAllFeaturedCollectionSliders);
    document.addEventListener('shopify:section:deselect', initAllFeaturedCollectionSliders);
    document.addEventListener('shopify:section:settings:change', initAllFeaturedCollectionSliders);
  }
</script>

