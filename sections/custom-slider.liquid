    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  .collection-tab-btn-{{ section.id }} {
    background: none;
    border: none;
    font-weight: bold;
    cursor: pointer;
    padding: 0.5rem 1rem;
    border-bottom: 2px solid transparent;
    font-size: 1rem;
    text-transform: capitalize;
    color: #222;
    transition: border 0.2s, color 0.2s;
  }
  .collection-tab-btn-{{ section.id }}.active {
