{{ 'custom-slider.css' | asset_url | stylesheet_tag }}



<div class="swiper mySwiper">
    <div class="swiper-wrapper">
      <div >
        {% for block in section.blocks %}
            {% assign product = all_products[block.settings.selected_product] %}
            <div class="swiper-slide">
              {{ product.title }}
            </div>
          {% endfor %}
      </div>
    </div>
    <div class="swiper-button-next">
        <span></span>
    </div>
    <div class="swiper-pagination"></div>
  </div>
  <script>
    var swiper = new Swiper(".mySwiper", {
      pagination: {
        el: ".swiper-pagination",
        type: "progressbar",
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
    });
  </script>

{% schema %}
    {
        "name": "Custom Slider Section",
        "settings": [
            {
                "type": "text",
                "id": "custom_text",
                "label": "Custom Text",
                "default": "Hello, World!"
            }
        ],
       "blocks": [
  {
    "type": "product",
    "name": "Product Block",
    "settings": [
      {
        "type": "product",
        "id": "selected_product",
        "label": "Select Product"
      }
    ]
  }
],
  
        "presets": [
            {
                "name": "Multiple Collections Slider",
                "category": "Custom"
            }
        ]
    }
{% endschema %} 