{{ 'popular.css' | asset_url | stylesheet_tag }}


<div class="popularMain">
    <h2>{{ section.settings.heading }}</h2>

    <div class="popularInner">
    {% for block in section.blocks %}
    <div class="popularItem">
        <h1>{{ block.settings.text }}</h1>
        <hr>
    </div>
    <div class="itemBorder"></div>
    {% endfor %}
</div>
</div>




{% schema %}
{
    "name": "Popular List",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Section Heading",
            "default": "Popular List"
        }
    ],
    "blocks": [
        {
            "type": "item",
            "name": "List Item",
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Popular List",
            "category": "Custom",
            "blocks": [
                {
                    "type": "item"
                }
            ]
        }
    ]
}
{% endschema %}