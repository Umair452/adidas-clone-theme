
<div class="custom-information-section" style="background-color: {{ section.settings.background_color }}">
    
    {% if section.settings.heading %}
        <h2 class="custom-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.paragraph %}
        <p class="custom-paragraph">{{ section.settings.paragraph }}</p>
    {% endif %}
    {% if section.settings.logo %}
        <img width="" height="" src="{{ section.settings.logo | image_url }}" alt="Logo" class="custom-logo">
    {% endif %}
</div>

{% schema %}
{
    "name": "Custom Information",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "paragraph",
            "label": "Paragraph"
        },
        {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
        },
        {
            "type": "color",
            "id": "background_color",
            "label": "Background Color"
        }
    ],
    "presets": [
        {
            "name": "Custom Information",
            "category": "Custom"
        }
    ]
}
{% endschema %}
